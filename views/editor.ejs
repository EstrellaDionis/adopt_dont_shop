<div class="form-group row">
  <label class="col-form-label col-sm-2" for="name">Name</label>
  <div class="col-sm-8">
    <input
      autofocus
      class="form-control"
      name="name"
      value="<%= model.name %>"
    />
  </div>
</div>

<div class="form-group row">
  <label class="col-form-label col-sm-2" for="type">Type</label>
  <div class="col-sm-7">
    <input class="form-control" name="type" value="<%= model.type %>" />
  </div>
</div>

<div class="form-group row">
  <label class="col-form-label col-sm-2" for="age">Age</label>
  <div class="col-sm-7">
    <input class="form-control" name="age" value="<%= model.age %>" />
  </div>
</div>

<div class="form-group row">
  <label class="col-form-label col-sm-2" for="adopted"
    >Adopted: 1 for True, 0 for False</label
  >
  <div class="col-sm-7">
    <input class="form-control" name="adopted" value="<%= model.adopted %>" />
  </div>
</div>

<div class="form-group row">
  <label class="col-form-label col-sm-2" for="description">Description</label>
  <div class="col-sm-10">
    <textarea
      class="form-control"
      cols="20"
      name="description"
      maxlength="32000"
      rows="7"
    >
<%= model.description %></textarea
    >
  </div>
</div>
